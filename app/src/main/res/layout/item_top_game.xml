<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/game_item_poster"
      android:layout_width="48dp"
      android:layout_height="0dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:background="@color/gray_700"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="H,3:4"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/game_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:textColor="@color/gray_100"
      android:textStyle="bold"
      app:layout_constraintStart_toEndOf="@+id/game_item_poster"
      app:layout_constraintTop_toTopOf="@+id/game_item_poster"
      tools:text="Dota 2" />

  <TextView
      android:id="@+id/game_viewers_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/gray_600"
      app:layout_constraintStart_toStartOf="@+id/game_item_title"
      app:layout_constraintTop_toBottomOf="@+id/game_item_title"
      tools:text="69,420" />

</androidx.constraintlayout.widget.ConstraintLayout>